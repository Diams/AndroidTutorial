<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/main_container_constraintLayout">

    <TextView
            android:id="@+id/main_acceleration_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/initialized_text_textView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/reset_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/main_reset_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/main_acceleration_textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>